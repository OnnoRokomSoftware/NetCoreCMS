@{
    var controllerName = "DemoDataHome";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Generation
                @*<div class="pull-right">@ViewBag.TotalUser</div>*@
            </div>
            <div class="panel-body">
                <form id="generate" asp-controller="@controllerName" asp-action="Generate" method="post">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" style="text-align:right;">User (@ViewBag.TotalUser) :</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" name="totalUser" id="totalUser" value="5" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" style="text-align:right;">Page (@ViewBag.TotalPublishedPage / @ViewBag.TotalPage) :</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" name="totalPage" id="totalPage" value="10" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" style="text-align:right;">Category (@ViewBag.TotalCategory) :</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" name="totalCategory" id="totalCategory" value="10" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" style="text-align:right;">Tags (@ViewBag.TotalTag) :</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" name="totalTag" id="totalTag" value="20" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" style="text-align:right;">Posts (@ViewBag.TotalPublishedPost / @ViewBag.TotalPost) :</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" name="totalPost" id="totalPost" value="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" style="text-align:right;">Comments (@ViewBag.TotalComments) :</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" name="totalComment" id="totalComment" value="40" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" style="text-align:right;">From :</label>
                        <div class="col-sm-8">
                            <input type="datetime" class="form-control" name="dateFrom" id="dateForm" value="@DateTime.Now.AddDays(-365).ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" style="text-align:right;">To :</label>
                        <div class="col-sm-8">
                            <input type="datetime" class="form-control" name="dateTo" id="dateTo" value="@DateTime.Now.AddDays(30).ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12" style="text-align:center;">
                            <input type="submit" class="btn btn-success" name="submit" value="Generate" />
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
